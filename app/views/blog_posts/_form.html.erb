    <!DOCTYPE html>
    <html>
    <head>
        <!-- Import Google Icon Font -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!-- Import materialize.css -->
        <link type="text/css" rel="stylesheet" href="/materialize/css/materialize.min.css"  media="screen,projection"/>
        <!-- Let browser know website is optimized for mobile -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <style>
            /* Ajouter une marge en haut de la carte */
            .card-with-margin {
                margin-top: 100px;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="card card-with-margin">
                <div class="card-content">
                <h3 class="center-align"><%= @form_title %></h3>
                    <%= form_with(model: blog_post, class: "col s12") do |form| %>
                        <% if form.object.errors.any? %>
                            <div class="row">
                                <div class="col s12">
                                    <div class="red-text">
                                        <% form.object.errors.full_messages.each do |message| %>
                                            <div><%= message %></div>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                        <div class="row">
                            <div class="input-field col s12">
                                <%= form.label :title, class: "active" %>
                                <%= form.text_field :title, class: "validate" %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <%= form.label :body, class: "active" %>
                                <%= form.text_area :body, class: "materialize-textarea" %>
                            </div>
                        </div>
                    <div class="row center-align">
            <div class="col s12">
                <button class="btn waves-effect waves-light" type="submit" name="action">
                    <%= @form_button_text %>
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </div>
                <% end %>
                </div>
            </div>
        </div>
        
        <!-- JavaScript at end of body for optimized loading -->
        <script type="text/javascript" src="/materialize/js/materialize.min.js"></script>
    </body>
    </html>
